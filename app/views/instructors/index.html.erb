<h3>Instructors</h3>

<p>Create, Display, Edit, and Remove Instructors</p>

<div class="main-img-div auto-margin">
  <%= image_tag image_path('jean.jpg'), alt: 'jean image' %>
</div>

<div class="content">
  <br />
  <%= link_to 'Add New Instructor', new_instructor_path, 'class': 'btn btn-outline-secondary btn-lg btn-block' %>

  <br>

  <% if @instructors!=[] %>

    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">Id #</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Options</th>
        </tr>
      </thead>

      <tbody>
        <% @instructors.each do |instructor| %>
        <tr class="instructor-div">
          <th scope="row"><%= instructor.id%></th>
          <td><%= instructor.f_name %></td>
          <td><%= instructor.l_name %></td>
          <td class="links">
            <%= link_to 'View', instructor_path(instructor) %>
            <%= link_to 'Edit', edit_instructor_path(instructor) %>
            <%= link_to 'Delete',instructor_path(instructor), method: :delete, data: {confirm: 'Are you sure?'}, class: 'delete-instructor' %>
          </td>

        <% end %>
      </tbody>
    </table>

  <% end %>
</div>
