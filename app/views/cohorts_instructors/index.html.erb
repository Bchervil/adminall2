<h3>Cohort Instructors</h3>

<p>Create, Display, Edit, and Remove Cohort Instructors</p>

<div class="main-img-div auto-margin">
  <%= image_tag image_path('fabian.jpg'), alt: 'fabian image' %>
</div>

<div class="content">
  <br />
  <%= link_to 'Assign New Cohort Instructor', new_cohorts_instructor_path, 'class': 'btn btn-outline-secondary btn-lg btn-block' %>

  <br />

  <% if @cohorts_instructors!=[] %>

    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">Cohort</th>
          <th scope="col">Instructor</th>
          <th scope="col">Assigned</th>
          <th scope="col">Options</th>
        </tr>
      </thead>

      <tbody>
        <% @cohorts_instructors.each do |cohort_instructor| %>
        <tr class="cohort-instructor-div">
          <th scope="row"><%= cohort_instructor.cohort.name%></th>
          <td><%= cohort_instructor.instructor.f_name %> <%= cohort_instructor.instructor.l_name %></td>
          <td><%= cohort_instructor.created_at.strftime('%Y-%m-%d') %></td>
          <td class="links">
            <%= link_to 'View Cohort', cohort_path(cohort_instructor.cohort.id) %>
            <%= link_to 'Edit', edit_cohorts_instructor_path(cohort_instructor) %>
           <%= link_to 'Remove',cohorts_instructor_path(cohort_instructor), method: :delete, data: {confirm: 'Are you sure?'}, class: 'delete-instructor' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  <% end %>
</div>
